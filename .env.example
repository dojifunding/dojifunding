# ============================================
# DOJI FUNDING - Configuration Example
# ============================================
# Copiez ce fichier en .env et remplissez avec vos vraies valeurs
# ⚠️ Ne jamais commiter le fichier .env (contient des secrets)

# === APPLICATION ===
APP_NAME="Doji Funding"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# === BASE DE DONNÉES ===
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=doji_funding
DB_USERNAME=root
DB_PASSWORD=

# === EMAIL (SendGrid, Mailgun, SMTP) ===
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@dojifunding.com
MAIL_FROM_NAME="Doji Funding"

# === PAIEMENT STRIPE ===
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# === SESSION ===
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false

# === SÉCURITÉ ===
APP_KEY=
HASH_ALGO=bcrypt

# === TIMEZONE ===
APP_TIMEZONE=Europe/Paris
APP_LOCALE=fr
